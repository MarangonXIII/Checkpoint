<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TesteActivity">

    <Button
        android:id="@+id/jLogin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#009688"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/jButtonCadastrar"
        app:layout_constraintEnd_toStartOf="@+id/jButtonEsqSenha2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jButtonCadastrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="749dp"
        android:backgroundTint="#009688"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/jLogin"
        app:layout_constraintStart_toStartOf="@+id/jLogin"
        app:layout_constraintTop_toBottomOf="@+id/jLogin" />

    <Button
        android:id="@+id/jButtonEsqSenha2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#009688"
        android:text="Esqueceu Senha"
        app:layout_constraintBottom_toBottomOf="@+id/jLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jLogin"
        app:layout_constraintTop_toTopOf="@+id/jLogin" />
</androidx.constraintlayout.widget.ConstraintLayout>